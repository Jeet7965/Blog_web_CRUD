<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Post</title>
</head>

<body>

    <!-- Navbar -->
    <%- include("partials/navbar") %>

        <div class="title-bar">
            <h2>All Blog Posts</h2>
            <h2><a href="/create"> ✍️ Create New Post </a> </h2>
        </div>
        <hr>
        <div class="container">
            <% posts.forEach(post=> { %>
                <div class="container-box">

                    <h2>
                        <%= post.title %>
                    </h2>
                    <% if (post.image) { %>
                        <img src="<%= post.image %>" alt="Blog Image" width="300">
                        <% } %>

                            <p>
                                <%-post.content.split(' ').slice(0, 30).join(' ').replace(/\n/g, '<br>') %> ... <span><a href="/details/<%= post.id %>">More Details</a></span></p>

                            <div class="btn">
                                <div>
                                    <a href="/delete/<%=post.id%>"><button class="del"> Delete    </button></a>

                                   <a href="/update/<%=post.id%>">   <button  class="up"> update    </button>  </a>  
   
                              
                                </div>
                                <div class="datetime">
                                    <p>Date: <%= post.createdAt.toLocaleDateString() %>
                                    </p>
                                    <p>Time: <%= post.createdAt.toLocaleTimeString() %>
                                    </p>
                                </div>
                            </div>

                </div>
                <% }) %>
        </div>

</body>

</html>